{{- $pages := (where .Site.RegularPages "Section" "pins") -}}
{{- $pins := slice -}}

{{- range $pages -}}
    {{ $pins = $pins | append (dict 
       "type" "Feature"
       "geometry" ( dict 
            "type" "Point"
            "coordinates" (slice .Params.location.longitude .Params.location.latitude .Params.location.height)
        )
        "properties" (dict
            "title" .Title
            "link" .Permalink
        )
    )
    }}
    
 {{- end -}}
 {
    "type": "FeatureCollection",
    "features": {{ $pins | jsonify }}
 }